<%- include("header");-%>
    <div class="box" id="heading">
      <h1><%= day %></h1>
    </div>
    <div class="box">
      <ul>
        <% for( let i=0 ;i < tasks.length ; i++ ){ %>
          <div class="item">
            <input type="checkbox" name="" value="">
            <p><%= tasks[i] %></p>
          </div>
        <% } %>
        <form  action="/" method="post"  class="item">
          <input type="text" name="taskval" value="" placeholder="New Item.." autocomplete="off">
          <button type="submit" name="list" value=<%= day %> >+</button>
        </form>
      </ul>
    </div>
<%- include("footer"); -%>
